INI,__LIB_ST7565_SPI_RST_PIN
INI,__LIB_ST7565_SPI_RST_PORT

; specify reset pin (RSTPIN)
; {VALUE,0,2} - port, {VALUE,2,1} - pin number
ASM
.IF {VALUE} == NONE
CLR (__LIB_ST7565_SPI_RST_PIN)
CLRW X
LDW (__LIB_ST7565_SPI_RST_PORT), X
.ELSE
MOV (__LIB_ST7565_SPI_RST_PIN), 1 << {VALUE,2,1}
LDW X, {VALUE,0,2}_ODR
LDW (__LIB_ST7565_SPI_RST_PORT), X
.ENDIF
ENDASM
