; calculates string length
; X - string address, returns the string length in A
:__LIB_STR_LEN
ASM
CLR A
TNZW X
JREQ ::__LBL_RET
JRMI ::__LBL_ROM_STR
; RAM string
LD A, (1, X)
JRA ::__LBL_RET_RLS

:::__LBL_ROM_STR
LD A, (X)

:::__LBL_RET_RLS
PUSH A
CALLR __LIB_STR_RLS
POP A

:::__LBL_RET
RET
ENDASM
