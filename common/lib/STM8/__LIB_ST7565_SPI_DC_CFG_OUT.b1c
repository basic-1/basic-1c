INI,__LIB_ST7565_SPI_DC_PIN
INI,__LIB_ST7565_SPI_DC_PORT

; configure DC pin (push-pull, output, fast)
:__LIB_ST7565_SPI_DC_CFG_OUT
ASM
LDW X, (__LIB_ST7565_SPI_DC_PORT)
INCW X
INCW X
LD A, (__LIB_ST7565_SPI_DC_PIN)
OR A, (X) ; Px_DDR
LD (X), A
INCW X
LD A, (__LIB_ST7565_SPI_DC_PIN)
OR A, (X) ; Px_CR1
LD (X), A
INCW X
LD A, (__LIB_ST7565_SPI_DC_PIN)
OR A, (X) ; Px_CR2
LD (X), A
RET
ENDASM