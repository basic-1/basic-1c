; reads data from SPI bus and stores it in memory
; X - address of buffer to store data at, Y - the data size (in bytes)
ASM
:::__LBL_NEXT
BTJF (SPI_SR), SPI_SR_RXNE_POS, ::__LBL_NEXT
LD A, (SPI_DR)
.IF {!XORIN_TYPE} == I
XOR A, {!XORIN_VALUE}
.ELIF {!XORIN_TYPE} == M
XOR A, ({!XORIN_VALUE})
.ELIF {!XORIN_TYPE} == S
XOR A, ({!XORIN_VALUE}, SP)
.ENDIF ;{!XORIN_TYPE} 
LD (X), A
INCW X
DECW Y
JRNE ::__LBL_NEXT
ENDASM