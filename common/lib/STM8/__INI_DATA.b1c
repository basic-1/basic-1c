ASM
.IF __DATA_SIZE == 0
.ELIF __DATA_SIZE == 1
CLR (0)
.ELIF __DATA_SIZE == 2
CLRW X
LDW (0), X
.ELIF __DATA_SIZE == 3
CLRW X
LDW (0), X
LDW (2), X
.ELIF __DATA_SIZE == 4
CLRW X
LDW (0), X
LDW (2), X
.ELIF __DATA_SIZE == 5
CLRW X
LDW (0), X
LDW (2), X
LDW (4), X
.ELIF __DATA_SIZE == 6
CLRW X
LDW (0), X
LDW (2), X
LDW (4), X
.ELSE
LDW X, __DATA_SIZE - 1
:__DATA_INIT_LOOP
CLR (X)
DECW X
JRPL __DATA_INIT_LOOP
.ENDIF
ENDASM


